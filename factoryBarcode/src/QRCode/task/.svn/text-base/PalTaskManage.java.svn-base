private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAddActionPerformed
    PalTaskDetail detail = new PalTaskDetail(Constants.OPER_ADD);
    JFrame jf = new JFrame();
    detail.setParentJframe(jf);
    detail.setParentJpanel(this);
    MainPage.showPanel(jf, detail, "新增任务");
}//GEN-LAST:event_btnAddActionPerformed

private void btnModifyActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnModifyActionPerformed
    Integer id = null;
    for (int i = 0; i < jTable1.getRowCount(); i++) {
        if ((Boolean) jTable1.getValueAt(i, 1)) {
            id = new Integer(jTable1.getValueAt(i, 0).toString());
        }
    }
    if (id == null) {
        JOptionPane.showMessageDialog(this, "请选择一条记录");
          return;
    }
    PalTaskDetail detail = new PalTaskDetail(Constants.OPER_EDIT, id);
    JFrame jf = new JFrame();
    detail.setParentJframe(jf);
    detail.setParentJpanel(this);
    MainPage.showPanel(jf, detail, "修改任务");
}//GEN-LAST:event_btnModifyActionPerformed

private void btnDelActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnDelActionPerformed
    Integer id = null;
    for (int i = 0; i < jTable1.getRowCount(); i++) {
        if ((Boolean) jTable1.getValueAt(i, 1)) {
            id = new Integer(jTable1.getValueAt(i, 0).toString());
        }
    }
    if (id == null) {
        JOptionPane.showMessageDialog(this, "请选择一条记录");
        return;
    }
    delTask(id);
