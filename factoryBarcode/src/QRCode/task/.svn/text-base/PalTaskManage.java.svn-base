    public void queryData() {

        for (int i = jTable1.getModel().getRowCount() - 1; i >= 0; i--) {
            ((DefaultTableModel) jTable1.getModel()).removeRow(i);
        }
        Task prod = initQueryParam();
        List<Task> l = DataBaseUtil.queryTaskByModel(prod);
        if (l != null && !l.isEmpty()) {
            for (Task p : l) {
                Object[] o = new Object[]{
                    p.getId(),
                    false,
                    p.getTaskcode(),
                    p.getProdName(),
                    p.getBatchnumber(),
                    p.getBatchline(),    
                    p.getBatchdate() == null ? null : DateUtils.date2Str(p.getBatchdate()),
                    p.getEnddate() == null ? null : DateUtils.date2Str(p.getEnddate())
                };
                ((DefaultTableModel) jTable1.getModel()).addRow(o);
            }
        } else {
            JOptionPane.showMessageDialog(this, "未查到数据！");
        }
    }

    private Task initQueryParam() {
        Task task = new Task();
        if (!StringUtils.isNullOrEmpty(prodid.getSelectedItem())) {
            task.setProdid(new Integer(prodid.getSelectValue()));
        }
        return task;
    }

    private void delTask(Integer id) {
        int k = JOptionPane.showConfirmDialog(this, "是否确认删除?", "确认删除", JOptionPane.YES_NO_OPTION);
        //确认删除
        if (k != 0) {
            return;
        }
        int i = DataBaseUtil.delTask(id);
        if (i > 0) {
            JOptionPane.showMessageDialog(this, "删除成功！");
            queryData();
        } else {
            JOptionPane.showMessageDialog(this, "删除失败！");
        }
    }
