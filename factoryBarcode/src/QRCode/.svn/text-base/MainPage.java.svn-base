    public static void showPanel(JPanel panel, String title) {
        JFrame jframe = new JFrame();
        jframe.setIconImage(new ImageIcon("homepage.png").getImage());
        showPanel(jframe, panel, title);
    }

    public static void showPanel(JFrame jframe, JPanel panel, String title) {
        jframe.setTitle(title);
        jframe.add(panel);
        jframe.setSize(panel.getPreferredSize());
        jframe.setLocationRelativeTo(null);//窗口居中显示
        jframe.setVisible(true);
    }
